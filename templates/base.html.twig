<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Teste DB1{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('assets/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" />        
            <link href="{{ asset('assets/bootstrap/css/bootstrap-theme.min.css') }}" rel="stylesheet" />        
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                      <a class="navbar-brand" href="#">DB Teste - Marcos Arnoldo</a>
                </div>
                 <ul class="nav navbar-nav">
                  <li><a href="/produto">Produtos</a></li>
                  <li><a href="/pessoa">Pessoas</a></li>
                </ul>
            </div>  
        </nav>     
        {% if mensagem is defined and mensagem is not empty %}
            <div class="alert alert-info" role="alert">{{ mensagem }}</div> 
        {% endif %}
        {% block body %}
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('assets/bootstrap/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('assets/bootstrap/js/npm.js') }}"></script>
        {% endblock %}
    </body>
</html>
